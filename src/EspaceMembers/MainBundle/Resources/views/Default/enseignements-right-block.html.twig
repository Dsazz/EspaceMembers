{#BEGIN right-column#}
    <div class="right-column">
       <div id="accordion">
           <h3 {% if filtered_chronology_id is defined %} .ui-state-active {% endif %} >
                <img src="{{ asset('bundles/espacemembersmain/js/images/calendar.png') }}" alt="icon" />
                Chronologique
            </h3>
            <div>
                <ul>
                    <li><a href="#" class="droplink ">Tout</a></li>
                    {% for chronology in chronologies %}
                    <li><a href="{{ path('espace_members_filter_teaching_chronology', {
                        'chronology_id': chronology.id}) }}" class="droplink">{{ chronology.year }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <h3><img src="{{ asset('bundles/espacemembersmain/js/images/folder.png') }}" alt="icon" />Chronologique</h3>
            <div>
                <ul>
                    <li><a href="#" class="droplink ">Tout</a></li>
                    {% for category in categories %}
                        <li><a href="{{ path('espace_members_filter_teaching_category', {
                        'category_id': category.id}) }}" class="droplink">{{ category.title|capitalize }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <h3><img src="{{ asset('bundles/espacemembersmain/js/images/notes.png') }}" alt="icon" />Par voie</h3>
            <div>
                <ul>
                    <li><a href="#" class="droplink ">Tout</a></li>
                    {% for voie in voies %}
                        <li><a href="{{ path('espace_members_filter_teaching_voie', {
                        'voie_id': voie.id}) }}" class="droplink">{{ voie.title|capitalize }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <h3><img src="{{ asset('bundles/espacemembersmain/js/images/mic.png') }}" alt="icon" />Par enseignant</h3>
            <div style="background:#fff9e4;">
                <ul>
                    <li><a href="#" class="droplink2 active">Tout</a></li>
                    {% for teacher in teachers %}
