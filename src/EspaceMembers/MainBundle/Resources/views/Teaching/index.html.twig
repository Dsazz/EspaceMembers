{% extends 'EspaceMembersMainBundle::layout.html.twig' %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/espacemembersmain/js/teaching/index.js') }}"></script>
{% endblock javascript %}

{% block enseignement_active %}
    <li class="current">
        <a class="active enseignements" href="{{ path ('espace_members_teaching') }}">Enseignements</a>
    </li>
{% endblock enseignement_active %}

{% block body %}
<div class="content">
    {% block right_column %}
        {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
        {{ render(controller('EspaceMembersMainBundle:Render:rightBlock', { 'currentPath' : currentPath })) }}
    {% endblock right_column %}

    {% block left_column %}
        {{ include('EspaceMembersMainBundle:Template/left-block:index.html.twig', {'events' : events, 'bookmarksId' : bookmarksId.bookmarks }) }}

        {% if paginator.haveToPaginate %}
        <div class="pagerfanta left-column">
            {{ pagerfanta(paginator) }}
        </div>
        {% endif %}
    {% endblock left_column %}
</div>
<div class="clear"><!-- --></div>
{% endblock %}
