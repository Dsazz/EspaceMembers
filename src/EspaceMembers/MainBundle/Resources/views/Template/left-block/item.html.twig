<span class="sub-heading">
    <img src="{{ asset('bundles/espacemembersmain/images/flag.png') }}" alt="flag" />
    {{ event.category.name|capitalize }}
</span>

<div class="image-box">
    <img src="{{ path_to_media(event.frontImage, 'big') }}" width="175px" height="175px" alt="image">
    <span class="describe">
        {{ 'espace.events.since'|trans({}, 'EspaceMembers') }}
        {{ event.startDate|localizeddate('none', 'none', app.request.locale, null, 'd LLLL')|title }}
        {{ 'espace.events.to'|trans({}, 'EspaceMembers') }}
        {{ event.completionDate|localizeddate('none', 'none', app.request.locale, null, 'd LLLL')|title }}
    </span>
    <a href="{{ path('espace_members_detail_teaching', {'event_id' : event.id} ) }}" class="zoom">{{ 'espace.detail'|trans({}, 'EspaceMembers') }}</a>
</div>

{% for teacher in event.users %}
    {{ include('EspaceMembersMainBundle:Template/left-block:detail-box.html.twig', {
        'teacher' : teacher, 'avatar' : teacher.avatar, 'bookmarksId' : bookmarksId
    }) }}
{% endfor %}
